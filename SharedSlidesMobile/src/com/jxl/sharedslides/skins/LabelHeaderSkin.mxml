<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" xmlns:shareslides="com.jxl.shareslides.*" xmlns:local="*"
		width="100%" height="25">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.jxl.sharedslides.skinnedcomponents.LabelHeader")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />
	</s:states>
	
	<shareslides:FlashSymbolContainer>
		<local:TextHeaderSymbol width="{width}" />
	</shareslides:FlashSymbolContainer>
	
	<s:Label text="{hostComponent.text}"
			 fontSize="21"
			 color="#FFFFFF"
			 left="4" right="4" top="4" bottom="0"/>
	
</s:Skin>
