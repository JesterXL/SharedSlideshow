<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 width="100%" height="25" 
		 xmlns:skins="com.jxl.shareslides.skins.*" xmlns:local="*"
		 >
	
	<fx:Script>
		<![CDATA[
			[Bindable]
			public var label:String;
		]]>
	</fx:Script>
	
	<skins:FlashSymbolContainer left="0" top="0">
		<local:HeaderSymbol width="{width}" />
	</skins:FlashSymbolContainer>
	
	<s:Label id="labelDisplay"
			 textAlign="center"
			 verticalAlign="middle"
			 maxDisplayedLines="1"
			 verticalCenter="1"
			 left="8"
			 fontSize="18"
			 fontWeight="normal"
			 color="#FFFFFF"
			 fontFamily="Arial"
			 text="{label}"/>
	
</s:Group>
